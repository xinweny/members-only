  form(action="" method="POST")
    label(for="email") Email
      input(
        type="email"
        id="email"
        name="email"
        required
      )
    
    label(for="pwd") Password
      input(
        type="password"
        id="pwd"
        name="pwd"
        required
      )

    button(type="submit") Login