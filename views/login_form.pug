extends layout

block content
  h2 Login
  form(action="/login" method="POST")
    label(for="email") Email
      input(
        type="email"
        id="email"
        name="email"
        required
      )
    
    label(for="password") Password
      input(
        type="password"
        id="password"
        name="password"
        required
      )

    button(type="submit") Login